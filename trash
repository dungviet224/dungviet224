function Tab:AddToggle(name, default, callback)
    local toggle = CreateElement("Frame", {
        Name = name .. "Toggle",
        Parent = self.container,
        BackgroundColor3 = AdvancedUI.theme.elementBackground,
        Size = UDim2.new(1, -10, 0, 30),
        Position = UDim2.new(0, 5, 0, 0)
    })
    
    -- Rest of toggle implementation...
    -- Similar pattern for other elements (Slider, Dropdown, etc.)
end

